<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    style="@style/Theme.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/UninstallApps"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/ViewWarningApp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IconWarningApp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fader" />

            <TextView
                android:id="@+id/NameWarningApp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="App Name"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ViewWarningApp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IconWarningApp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_fader" />

            <TextView
                android:id="@+id/NameWarningApp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="App Name"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:id="@+id/TxtMoreWaringApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="More apps..."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/checkboxShoWA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/NeverShowWarning"
            android:textColor="#000" />
    </LinearLayout>
</LinearLayout>
